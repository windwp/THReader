<UserControl x:Class="TungHoanhReader.Controls.TruyenViewer" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d"
             >
    <Grid HorizontalAlignment="Left"  VerticalAlignment="Stretch" Background="Transparent">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"></ColumnDefinition>
            <ColumnDefinition Width="100"></ColumnDefinition>
            <ColumnDefinition Width="100"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Column="0" x:Name="titleTextBlock"  Text="{Binding Title}" TextWrapping="Wrap" Foreground="Black"  FontSize="16.667" FontWeight="Bold"  MaxHeight="25" VerticalAlignment="Center" HorizontalAlignment="Left"/>
        <TextBlock Grid.Column="1" x:Name="authorTextBlock"  Text="{Binding Author}" TextWrapping="Wrap" Foreground="Black" FontSize="14.667" FontWeight="Light"  MaxHeight="20" VerticalAlignment="Center" HorizontalAlignment="Left"/>
        <TextBlock Grid.Column="2" x:Name="categoryTextBlock" Text="{Binding Category}" TextWrapping="Wrap" Foreground="Black" FontSize="14.667" FontWeight="Light"  VerticalAlignment="Center" HorizontalAlignment="Left" FontFamily="Segoe UI"/>
        
    </Grid>
</UserControl>