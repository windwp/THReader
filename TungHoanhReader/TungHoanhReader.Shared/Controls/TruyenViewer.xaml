<UserControl x:Class="TungHoanhReader.Controls.TruyenViewer" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" d:DesignHeight="300" d:DesignWidth="400">
    <Grid HorizontalAlignment="Stretch" Background="Transparent">
        <StackPanel Orientation="Horizontal" Margin="10,10,0,0">
            <Image x:Name="image"  Height="60" Width="60" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <StackPanel Margin="0,0,0,0" Orientation="Horizontal">
                <TextBlock x:Name="categoryTextBlock" Text="{Binding Category}" TextWrapping="Wrap" Foreground="Black" FontSize="14.667" FontWeight="Light" Width="200" VerticalAlignment="Center" HorizontalAlignment="Left" FontFamily="Segoe UI"/>
                <TextBlock x:Name="titleTextBlock"  Text="{Binding Title}" TextWrapping="Wrap" Foreground="Black" FontSize="14.667" FontWeight="Light" Width="200" MaxHeight="20" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                <TextBlock x:Name="authorTextBlock"  Text="{Binding Author}" TextWrapping="Wrap" Foreground="Black" FontSize="14.667" FontWeight="Light" Width="200" MaxHeight="20" VerticalAlignment="Center" HorizontalAlignment="Left"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>